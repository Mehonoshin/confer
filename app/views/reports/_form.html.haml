.well
  = semantic_form_for @report do |f|
    = f.inputs do
      = f.input :title, label: t('projects.reports.title')
      = f.input :description, label: t('projects.reports.description')
    = f.actions do
      = f.action :submit, button_html: { class: "btn btn-success" }, label: t('projects.reports.submit')
