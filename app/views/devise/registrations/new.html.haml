.well
  %table.devise
    %tr
      %td
        %h2= t('registration.sign_up')

        = semantic_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
          = f.inputs do
            = f.input :email, label: t('registration.email')
            = f.input :password, label: t('registration.password')
            = f.input :password_confirmation, label: t('registration.password_confirmation')
          = f.actions do
            = f.action :submit, button_html: { class: "btn btn-primary btn-large" }, label: t('registration.to_sign_up')
      %td.shared-links{ valign: "top" }
        = render "devise/shared/links"
