.well
  %table.devise
    %tr
      %td
        %h2= t('registration.edit')
        = semantic_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
          = f.inputs do
            = f.input :email, label: t('registration.email')
            = f.input :full_name
            = f.input :address
            = f.input :phone
            = f.input :about
            = f.input :password, label: t('registration.password')
            = f.input :password_confirmation, label: t('registration.password_confirmation')
            = f.input :current_password, label: t('registration.current_password')
          = f.actions do
            = f.action :submit, button_html: { class: "btn btn-large btn-primary" }, label: t('registration.submit')
      %td.shared-links{ valign: "top" }
        %h3
          = t('registration.cancel_registration')
        %p
          = button_to t("registration.remove_account"), registration_path(resource_name), class: "btn btn-danger", data: { confirm: t("registration.are_you_sure") }, method: :delete



