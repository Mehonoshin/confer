= semantic_form_for @conference do |f|
  = f.inputs do
    = f.input :name
    = f.input :domain
    = f.input :start_date, as: :string, input_html: { class: "datepicker" }
    = f.input :end_date, as: :string, input_html: { class: "datepicker" }
    = f.input :max_guests
  = f.actions do
    = f.action :submit, button_html: { class: "btn btn-success" }
