.well
  %h1= t('projects.participants.index_title')
  %p= t('projects.participants.index_desc')

%table.table.table-bordered.tablesorter.tablesorter-default
  %thead
    %tr
      %th= t('projects.participants.name')
      %th= t('projects.participants.address')
      %th= t('projects.participants.reports')
      - if can? :moderate, @conference
        %th
        %th
  - @participants.each do |participant|
    %tr
      %td
        %span.label.label-info= t('projects.participants.is_speaker') unless participant.reports.empty?
        = participant.user.full_name
      %td= participant.user.address
      %td
        - participant.reports.each do |report|
          = report.title
      - if can? :moderate, @conference
        %td
          = button_to t('projects.participants.approve'), approve_participant_path(participant), method: :put, class: "btn btn-small btn-success", confirm: t('projects.participants.confirm_approve')
        %td
          = button_to t('projects.participants.remove'), participant_path(participant), method: :delete, class: "btn btn-small btn-danger", confirm: t('projects.participants.confirm_remove')

